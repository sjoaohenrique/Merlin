{
    "compilerOptions": {
        "rootDir": "src",
        "declaration": true,
        "sourceMap": true,
        "target": "ES5",
        "experimentalDecorators": true,
        "module": "CommonJS",
        "strict": true,
        "outDir": "./dist",
        "moduleResolution": "Node",
        "esModuleInterop": true
